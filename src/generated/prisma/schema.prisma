generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String   @id @default(cuid())
  name             String?
  email            String?  @unique
  password         String?
  role             String?  @default("USER")
  createdAt        DateTime @default(now())
  verificationCode String?
  isVerified       Boolean  @default(false)
  updatedAt        DateTime @updatedAt
}

model admin {
  id       String @id @default(cuid())
  email    String @unique
  password String
  role     String @default("ADMIN")
}

model Hr {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      String   @default("HR")
  createdAt DateTime @default(now())
}

model Organization {
  id               String   @id @default(cuid())
  name             String   @unique
  description      String
  industry         String
  website          String?  @default("")
  location         String?  @default("")
  foundedYear      Int?     @default(2025)
  contactEmail     String
  phoneNumber      String?  @default("")
  teamSize         Int
  socialLinks      String?  @default("")
  figmaLink        String?  @default("")
  domainName       String?  @default("")
  needWebsite      Boolean  @default(false)
  goals            String?  @default("")
  mission          String?  @default("")
  specificFeatures String?  @default("")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
